{
  "name": "editor-markdown",
  "version": "1.0.0",
  "description": "Um editor de Markdown simples feito com Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "RW Consultoria",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "26.0.20"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "marked": "^16.2.1"
  },
  "build": {
    "appId": "com.rodineyw.editormarkdown",
    "productName": "Editor Markdown",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
